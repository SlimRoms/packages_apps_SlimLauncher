<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/homescreen_title" />

    <CheckBoxPreference
        android:key="show_search_bar"
        android:title="@string/show_search_bar_title"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="scroll_wallpaper"
        android:title="@string/scroll_wallpaper_title"
        android:summary="@string/scroll_wallpaper_summary"
        android:defaultValue="true"/>

    <com.slim.slimlauncher.preference.DoubleNumberPickerPreference
        android:key="homescreen_grid"
        android:summary="@string/grid_size_summary"
        android:title="@string/grid_size_title"
        launcher:max1="10"
        launcher:max2="10"
        launcher:min1="1"
        launcher:min2="1"
        launcher:pickerTitle1="@string/homescreen_workspace_rows_title"
        launcher:pickerTitle2="@string/homescreen_workspace_columns_title" />

    <CheckBoxPreference
        android:key="homescreen_hide_icon_labels"
        android:title="@string/hide_icon_labels_title"
        android:summary="@string/hide_icon_labels_homescreen_summary"
        android:defaultValue="false" />

    <PreferenceCategory android:title="@string/dock_title" />

    <com.slim.slimlauncher.preference.NumberPickerPreference
        android:key="dock_icon_count"
        android:title="@string/dock_icons_title"
        android:summary="@string/dock_icons_summary"
        launcher:min="1"
        launcher:max="7" />

    <CheckBoxPreference
        android:key="dock_hide_icon_labels"
        android:title="@string/hide_icon_labels_title"
        android:summary="@string/hide_icon_labels_dock_summary"
        android:defaultValue="true" />

    <PreferenceCategory android:title="@string/drawer_title" />

    <com.slim.slimlauncher.preference.DoubleNumberPickerPreference
        android:key="drawer_grid"
        android:summary="@string/grid_size_summary"
        android:title="@string/grid_size_title"
        launcher:max1="10"
        launcher:max2="10"
        launcher:min1="1"
        launcher:min2="1"
        launcher:pickerTitle1="@string/homescreen_workspace_rows_title"
        launcher:pickerTitle2="@string/homescreen_workspace_columns_title" />

    <CheckBoxPreference
        android:key="drawer_hide_icon_labels"
        android:title="@string/hide_icon_labels_title"
        android:summary="@string/hide_icon_labels_drawer_summary"
        android:defaultValue="false" />

    <PreferenceCategory android:title="@string/folder_title" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="folder_background_color"
        android:title="@string/folder_background_color_title"
        android:defaultValue="0xffffffff" />

    <CheckBoxPreference
        android:key="hide_folder_name"
        android:title="@string/hide_folder_name_title"
        android:summary="@string/hide_folder_name_summary"
        android:defaultValue="false" />

    <PreferenceCategory android:title="@string/general_title" />

    <com.slim.slimlauncher.preference.SeekBarDialogPreference
        android:key="icon_size"
        android:title="@string/icon_size_title"
        launcher:max="130"
        launcher:min="70"
        launcher:defaultValue="100"/>

    <PreferenceScreen
        android:key="gestures"
        android:title="@string/gestures_title"
        android:summary="@string/gestures_summary" />

</PreferenceScreen>