<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="drawer_style"
        android:title="@string/drawer_style_title"
        android:summary="%s"
        android:entries="@array/drawer_style_entries"
        android:entryValues="@array/drawer_style_values"
        android:defaultValue="0" />

    <SwitchPreference
        android:key="drawer_search_bar"
        android:title="@string/drawer_search_bar_title"
        android:defaultValue="true" />

    <com.android.launcher3.preference.DoubleNumberPickerPreference
        android:key="portrait_drawer_grid"
        android:summary="@string/grid_size_summary"
        android:title="@string/portrait_grid_size_title"
        launcher:max1="10"
        launcher:max2="10"
        launcher:min1="1"
        launcher:min2="1"
        launcher:pickerTitle1="@string/grid_size_rows_title"
        launcher:pickerTitle2="@string/grid_size_columns_title" />

    <com.android.launcher3.preference.DoubleNumberPickerPreference
        android:key="landscape_drawer_grid"
        android:summary="@string/grid_size_summary"
        android:title="@string/landscape_grid_size_title"
        launcher:max1="10"
        launcher:max2="10"
        launcher:min1="1"
        launcher:min2="1"
        launcher:pickerTitle1="@string/grid_size_rows_title"
        launcher:pickerTitle2="@string/grid_size_columns_title" />

    <com.android.launcher3.preference.SeekBarDialogPreference
        android:key="drawer_icon_size"
        android:title="@string/icon_size_title"
        launcher:max="130"
        launcher:min="70"
        launcher:defaultValue="100" />

</PreferenceScreen>
