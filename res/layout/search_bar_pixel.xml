<?xml version="1.0" encoding="utf-8"?>
<org.slim.launcher.SlimSearchBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/now_tab"
        android:background="@drawable/bg_pill"
        android:layout_width="70dp"
        android:scaleType="center"
        android:elevation="10dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_qsb_m_letter_color_google"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:gravity="center|start" />


    <LinearLayout
        android:layout_toEndOf="@id/now_tab"
        android:id="@+id/qsb_base"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/date1"
            android:textColor="@android:color/white"
            android:paddingBottom="4.0dp"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:textSize="32.0dip"
            android:text="November 6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date2"
            android:textSize="12.0dip"
            android:textColor="@android:color/white"
            android:includeFontPadding="false"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:text="Sunday, 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</org.slim.launcher.SlimSearchBar>